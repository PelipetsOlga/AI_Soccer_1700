<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApplication" parent="android:Theme.Material.Light.NoActionBar" />
    
    <!-- Custom Date Picker Dialog Theme -->
    <style name="CustomDatePickerDialog" parent="android:Theme.Material.Dialog">
        <item name="android:colorBackground">@color/color_grey_3b</item>
        <item name="android:windowBackground">@color/color_grey_3b</item>
        <item name="android:colorAccent">@color/color_red</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/color_grey_89</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonStyle</item>
    </style>
    
    <!-- Custom Time Picker Dialog Theme -->
    <style name="CustomTimePickerDialog" parent="android:Theme.Material.Dialog">
        <item name="android:colorBackground">@color/color_grey_3b</item>
        <item name="android:windowBackground">@color/color_grey_3b</item>
        <item name="android:colorAccent">@color/color_red</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/color_grey_89</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonStyle</item>
    </style>
    
    <!-- Custom Button Style for Picker Dialogs -->
    <style name="CustomButtonStyle" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/color_red</item>
        <item name="android:background">@color/color_grey_3b</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Custom Date Picker Widget -->
    <style name="CustomDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:colorBackground">@color/color_grey_2b</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/color_grey_89</item>
    </style>
    
    <!-- Custom Time Picker Widget -->
    <style name="CustomTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:colorBackground">@color/color_grey_2b</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/color_grey_89</item>
    </style>
    
</resources>